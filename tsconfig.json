{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["ESNext"],
    "module": "commonjs",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["src"]
}
